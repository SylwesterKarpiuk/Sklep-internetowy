@model System.Collections.Generic.IEnumerable<Shop___videopoint.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <p>@DateTime.Now.Second</p>
</div>



<div class="row">
    <form method="get">
        <input type="text" name="search"/>
        <input type="submit"/>
    </form>
    @foreach (var category in Model)
    {
    <div class="col-md-4">
        <h2>@category.Name</h2>
        <ul>
            @foreach (var product in category.Products)
            {
                <li>@product.Name (@product.Price)</li>
            }
        </ul>
    </div>
    }
</div>